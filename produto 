class Produto:
    def __init__(self, nome, preco, codigo, estoque):
        self.__nome = nome
        self.__preco = preco
        self.__codigo = codigo
        self.__estoque = estoque  # Novo atributo

    
    def get_nome(self):
        return self.__nome

    def get_preco(self):
        return self.__preco

    def get_codigo(self):
        return self.__codigo

    def get_estoque(self):
        return self.__estoque

    def set_preco(self, novo_preco):
        if novo_preco > 0:
            self.__preco = novo_preco

    def adicionar_estoque(self, quantidade):
        if quantidade > 0:
            self.__estoque += quantidade

    def remover_estoque(self, quantidade):
        if 0 < quantidade <= self.__estoque:
            self.__estoque -= quantidade

    def aplicar_desconto(self, percentual):
        if 0 < percentual < 100:
            desconto = self.__preco * (percentual / 100)
            self.__preco -= desconto

    
    def exibir_detalhes(self):
        print(f"\n Produto: {self.__nome}")
        print(f" Preço: R${self.__preco:.2f}")
        print(f" Código: {self.__codigo}")
        print(f" Estoque: {self.__estoque} unidades")